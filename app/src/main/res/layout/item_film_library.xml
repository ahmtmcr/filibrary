<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filmLayoutLibrary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/filmPoster"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/filmId"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="filmId"
        android:layout_marginStart="1dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/filmT"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="FilmName"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/filmPoster"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/filmReleaseDate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/filmPoster"
        android:layout_marginTop="55dp"
        android:layout_alignTop="@+id/filmT"
        android:text="FilmReleaseDate"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/filmRuntime"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/filmPoster"
        android:layout_alignTop="@+id/filmReleaseDate"
        android:text="FilmRuntime"
        android:textAlignment="center" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:isIndicator="true"
        android:layout_alignTop="@+id/filmRuntime"
        android:numStars="5"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:stepSize="0.1" />

</RelativeLayout>